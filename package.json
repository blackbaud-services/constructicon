{
  "name": "constructicon",
  "version": "2.0.5",
  "description": "Library of re-usable components for Professional Services projects",
  "main": "index.js",
  "scripts": {
    "start": "styleguidist server",
    "lint": "standard",
    "test": "mocha source/**/**/__tests__/*.js",
    "format": "prettier-standard 'source/**/*.js'",
    "precommit": "lint-staged",
    "build": "babel source -d dist",
    "build:styleguide": "styleguidist build",
    "deploy:styleguide": "npm run build:styleguide && gh-pages -d styleguide",
    "deploy:prepare": "gulp npm-prepare"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/everydayhero/constructicon.git"
  },
  "bugs": {
    "url": "https://github.com/everydayhero/constructicon/issues"
  },
  "author": "Dan Henderson <dan.henderson@everydayhero.com>",
  "license": "MIT",
  "dependencies": {
    "emotion": "^9.2.6",
    "emotion-server": "^9.2.6",
    "lodash": "^4.17.4",
    "minimal.css": "^1.0.1",
    "moment": "^2.19.1",
    "prop-types": "^15.5.8",
    "react-helmet": "^5.1.3",
    "react-modal": "^3.2.1",
    "react-onclickoutside": "^6.7.1",
    "react-slick": "^0.18.1"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.6.0",
    "gh-pages": "^0.12.0",
    "gulp": "^3.9.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "husky": "^0.14.3",
    "jsdom": "^9.9.1",
    "lint-staged": "^7.2.2",
    "mocha": "^2.5.3",
    "prettier": "^1.14.3",
    "prettier-standard": "^8.0.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-styleguidist": "^6.2.6",
    "sinon": "^4.1.3",
    "standard": "^10.0.2",
    "webpack": "2.2.0"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "standard": {
    "ignore": [
      "source/**/**/__tests__/*.js",
      "test",
      "gulpfile.js"
    ],
    "globals": [
      "it",
      "describe",
      "mount",
      "expect",
      "utils"
    ]
  },
  "lint-staged": {
    "linters": {
      "source/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
